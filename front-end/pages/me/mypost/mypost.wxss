page {
  width: 90%;
  margin: 0 auto;
  font-size: 28rpx;
  color: #999;
}
.item {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}
.date {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  background-color: rgba(0, 0, 0, 0.08);
  color: white;
  padding: 0 10rpx;
  border-radius: 8rpx;
}
.innerbox {
  width: 100%;
  background-color: white;
  padding: 30rpx 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.04);
  border-radius: 10rpx;
}
.title {
  color: #333;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.posttype {
  padding: 0 10rpx;
  background-color: #cce6ff;
  margin-right: 10rpx;
  color: white;
}
.isanonumous {
  padding: 0 10rpx;
  background-color: #fadbd9;
  color: white;
}
.detail {
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 没有登陆的时候的弹窗 */
.del-model {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1110;
  opacity: 0;
  outline: 0;
  text-align: center;
  -ms-transform: scale(1.185);
  transform: scale(1.185);
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
}
.del-model::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.del-model-inner {
  position: relative;
  vertical-align: middle;
  width: 560rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #f8f8f8;
  display: inline-block;
  color: #333;
  border-radius: 10rpx;
}
.closebtn {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 30rpx;
  top: 20rpx;
  background-image: url("data:image/png;base64,");
  background-size: 30rpx 30rpx;
  background-repeat: no-repeat;
  background-position: center center;
}
.del-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #0081ff;
  color: white;
}
.del {
  width: 100%;
  color: #333;
  z-index: 2;
  text-align: center;
  vertical-align: text-top;
  box-sizing: border-box;
  padding: 20rpx;
}
.go-del{
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  border-radius: 0 0 10rpx 10rpx;
  background-color: rgba(0, 0, 0, 0.06);
}
.show-del-model {
  opacity: 1;
  transition-duration: 0.3s;
  -ms-transform: scale(1);
  transform: scale(1);
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
  -webkit-overflow-scrolling: touch
}

.null-data {
  position: fixed;
  width: 80%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.null-data image {
  width: 40%;
  margin-bottom: 20rpx;
}

/* 提示框，自动消失，没有关闭按钮 */
.notify-model {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1111;
  opacity: 0;
  outline: 0;
  text-align: center;
  -ms-transform: scale(1.185);
  transform: scale(1.185);
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
}
.notify-model::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.notify-model-inner {
  position: relative;
  vertical-align: middle;
  width: 400rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #f8f8f8;
  display: inline-block;
  border-radius: 10rpx;
}
.notify-model-inner-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #0081ff;
  color: white;
}
.notify-model-inner-detail {
  width: 100%;
  z-index: 2;
  text-align: center;
  vertical-align: text-top;
  box-sizing: border-box;
  padding: 20rpx 0;
  color: #666;
}
.show-notify-model {
  opacity: 1;
  transition-duration: 0.3s;
  -ms-transform: scale(1);
  transform: scale(1);
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
}

/* 加载动画 */
.loadingbox {
  position: fixed;
  opacity: 0;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1111;
  outline: 0;
  text-align: center;
  pointer-events: none;
}
.loadingbox:before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.innerloadingbox {
  position: relative;
  vertical-align: middle;
  width: 200rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #0e111f;
  display: inline-block;
  border-radius: 10rpx;
}
.loadingimg {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}
.loading {
  width: 200rpx;
  height: 200rpx;
  display: block;
}
.clue {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: white;
  text-align: center;
  background-color: #0e111f;
}
.show-model {
  opacity: 1;
}