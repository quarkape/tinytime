/* 提示框，自动消失，没有关闭按钮 */
.notify-model {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1111;
  opacity: 0;
  outline: 0;
  text-align: center;
  -ms-transform: scale(1.185);
  transform: scale(1.185);
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
}
.notify-model::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.notify-model-inner {
  position: relative;
  vertical-align: middle;
  width: 400rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #f8f8f8;
  display: inline-block;
  border-radius: 10rpx;
}
.notify-model-inner-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #0081ff;
  color: white;
}
.notify-model-inner-detail {
  width: 100%;
  z-index: 2;
  text-align: center;
  vertical-align: text-top;
  box-sizing: border-box;
  padding: 20rpx 0;
  color: #666;
}
.show-notify-model {
  opacity: 1;
  transition-duration: 0.3s;
  -ms-transform: scale(1);
  transform: scale(1);
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
}

/* 加载层的相关弹窗 */
.loading-model {
  position: fixed;
  opacity: 0;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  outline: 0;
  text-align: center;
  pointer-events: none;
}
.loading-model:before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.loading-model-inner {
  position: relative;
  vertical-align: middle;
  width: 200rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #0e111f;
  display: inline-block;
  border-radius: 10rpx;
}
.loading-model-inner-img {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}
.loading-model-inner-img-gif {
  width: 200rpx;
  height: 200rpx;
  display: block;
}
.loading-model-inner-clue {
  width: 100%;
  height: 60rpx;
