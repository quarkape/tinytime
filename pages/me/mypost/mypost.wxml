<view  wx:if="{{isNormal==true}}" >
  <view class="item" wx:for="{{myposts}}" wx:key="index" data-title="{{item.title}}" data-delid="{{index}}" data-postid="{{item.postid}}" bindtap="toMyPost" bindlongpress="deletePost">
    <view class="date">{{item.date}}</view>
    <view class="innerbox">
      <view class="title">
        <text class="posttype">{{item.type==0?"观点":(item.type==1?"趣事":"资源")}}</text>
        <text class="isanonumous" wx:if="{{item.anonymous==1}}">匿名</text>
        {{item.title}}
      </view>
      <view class="detail">{{item.content}}</view>
    </view>
  </view>

  <view style="height: 60rpx"></view>

  <!-- 当用户当前没有任何消息的时候，显示空的信息 -->
  <view class="null-data" wx:if="{{myposts.length==0}}">
    <image src="{{imgUrl}}/wxbg/nulldata.png" mode="widthFix"></image>
    <view>貌似还没发表帖子</view>
  </view>
</view>

<view class="ph"  wx:else style="position:fixed;top:0;left:0;width:100%;overflow:hidden;height:auto"><image style="width:100%;" mode="widthFix" src="{{imgUrl}}/wxbg/other/space.jpg" /></view>

<!-- 删除帖子的弹窗 -->
<view class="del-model {{showDel?'show-del-model':''}}">
	<view class="del-model-inner">
		<view class="closebtn" bindtap="closeWindow"></view>
		<view class="del-title">删除帖子</view>
		<view class="del">将要删除帖子，包括里面的图片，评论等，确认删除吗？</view>
    <view class="go-del" bindtap="toDeletePost">立即删除</view>
	</view>
</view>

<!-- 信息提示层，一定时间后自动关闭 -->
<view class="notify-model {{showNotify?'show-notify-model':''}}"> 
	<view class="notify-model-inner">
		<view class="notify-model-inner-title">{{notifyTitle}}</view>
		<view class="notify-model-inner-detail">{{notifyDetail}}</view>
	</view>
</view>

<!-- 加载动画 -->
<view class="loadingbox {{showLoading?'show-model':''}}">
  <view class="innerloadingbox">
    <view class="loadingimg"><image class="loading" src="{{imgUrl}}/wxbg/loading.gif"></image></view>
    <view class="clue">{{loadingTxt}}</view>
  </view>
</view>