page {
  width: 96%;
  margin: 0 auto;
  color: #333;
  font-size: 28rpx;
}
.box {
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0,0,0,.02);
  margin-top: 60rpx;
  width: 100%;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}
.box-bg {
  position: absolute;
  top: 0;
  width: 100%;
  left: 0;
  z-index: -1;
  opacity: 0.6;
  border-radius: 10rpx 10rpx 0 0;
}
.box-bg-bottom {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  left: 0;
  z-index: -1;
  opacity: 0.6;
  border-radius: 0 0 10rpx 10rpx;
}
.box-bg image {
  border-radius: 10rpx 10rpx 0 0;
}
.box-bg-bottom image {
  border-radius: 0 0 10rpx 10rpx;
}
.logotxt {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 20rpx;
}
.logotxt image {
  height: 80rpx;
}
.detail {
  text-indent: 2em;
  z-index: 2;
}