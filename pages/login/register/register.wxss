page {
  font-size: 28rpx;
  color: #666;
}
.logo {
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center; 
}
.logo image {
  height: 100rpx;
}
.logotxt {
  width: 100%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  margin: 10rpx 0;
  position: relative;
}
.logotxt::after {
  content: "";
  position: absolute;
  left: 20%;
  width: 60%;
  z-index: -1;
  height:30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  top: 0;
}
.logotxt .txt {
  background-color: rgb(245, 247, 250);
  padding: 0 20rpx;
  display: inline;
  font-style: italic;
}

.registerform {
  margin: 0 auto;
  margin-top: 40rpx;
  width: 80%;
  box-sizing: border-box;
  overflow: hidden;
}
.username, .upwd, .ensureupwd, .email {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.6);
  margin-bottom: 40rpx;
  position: relative;
}
.username view, .upwd view, .ensureupwd view, .email view {
  width: 100rpx;
  height: 80rpx;
  text-align: justify;
  line-height: 80rpx;
  overflow: hidden;
  color: #333;
}
.username view::after, .upwd view:after, .ensureupwd view:after, .email view::after {
  width: 100%;
  display: inline-block;
  content: '';
  letter-spacing: -2rpx;
}
.username input, .upwd input, .ensureupwd input, .email input {
  display: inline-block;
  width: 400rpx;
  margin-left: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.authcode {
  position: relative;
}
.authcode input {
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.6);
  display: inline-block;
}
.authcode view {
  display: inline-block;
  width: 50%;
  position: absolute;
  right: 0;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  color: white;
}
.getcode {
  background-color: #0081ff;
}
.noclick {
  pointer-events: none;
}
.registerbtn {
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  border-radius: 10rpx;
  color: white;
  background-color: #0081ff;
  font-size: 28rpx;
  line-height: 80rpx;
  position: relative;
  text-align: center;
}
.mbg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

checkbox .wx-checkbox-input{ 
  /* 自定义样式.... */
   height: 36rpx; 
   width: 36rpx;
   margin-top: -4rpx;
   border-radius: 6rpx;
   border: 1rpx solid #CCCCCC;
   background: transparent;
  }
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #0081ff;
  border: 1rpx solid #0081ff;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.sla {
  margin-top: 20rpx;
  z-index: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.sla text {
  display: inline;
  font-weight: bold;
  text-decoration: underline;
  z-index: 2;
  color: #333;
}

/* 服务协议弹窗 */
.sla-detail {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1110;
  opacity: 0;
  outline: 0;
  text-align: center;
  -ms-transform: scale(1.185);
  transform: scale(1.185);
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
}
.sla-detail::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.detail {
  position: relative;
  vertical-align: middle;
  width: 680rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #f8f8f8;
  display: inline-block;
  color: #333;
  border-radius: 10rpx;
}
.closebtn {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 30rpx;
  top: 20rpx;
  background-image: url("data:image/png;base64,");
  background-size: 30rpx 30rpx;
  background-repeat: no-repeat;
  background-position: 10rpx 10rpx;
}
.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #0081ff;
  color: white;
}
.content {
  width: 100%;
  color: #333;
  z-index: 2;
  text-align: left;
  vertical-align: text-top;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 1.6;
}
.content view {
  text-indent: 2em;
}
.show {
  opacity: 1;
  transition-duration: 0.3s;
  -ms-transform: scale(1);
  transform: scale(1);
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
}

/* 提示框，自动消失，没有关闭按钮 */
.notify-model {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1111;
  opacity: 0;
  outline: 0;
  text-align: center;
  -ms-transform: scale(1.185);
  transform: scale(1.185);
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
}
.notify-model::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.notify-model-inner {
  position: relative;
  vertical-align: middle;
  width: 400rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #f8f8f8;
  display: inline-block;
  border-radius: 10rpx;
}
.notify-model-inner-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #0081ff;
  color: white;
}
.notify-model-inner-detail {
  width: 100%;
  z-index: 2;
  text-align: center;
  vertical-align: text-top;
  box-sizing: border-box;
  padding: 20rpx 0;
  color: #666;
}
.show-notify-model {
  opacity: 1;
  transition-duration: 0.3s;
  -ms-transform: scale(1);
  transform: scale(1);
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
}

/* 加载层的相关弹窗 */
.loading-model {
  position: fixed;
  opacity: 0;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1111;
  outline: 0;
  text-align: center;
  pointer-events: none;
}
.loading-model:before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.loading-model-inner {
  position: relative;
  vertical-align: middle;
  width: 200rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #0e111f;
  display: inline-block;
  border-radius: 10rpx;
}
.loading-model-inner-img {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}
.loading-model-inner-img-gif {
  width: 200rpx;
  height: 200rpx;
  display: block;
}
.loading-model-inner-clue {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: white;
  text-align: center;
  background-color: #0e111f;
  font-size: 26rpx;
}
.show-loading-model {
  opacity: 1;
}